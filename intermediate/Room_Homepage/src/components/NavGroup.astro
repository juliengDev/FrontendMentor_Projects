---
import NavLink from "./NavLink.astro";
---

<ul
  id="menu"
  class="navLinks absolute top-1/2 right-[24px] z-10 flex -translate-y-1/2 flex-row gap-8 bg-white"
>
  <NavLink linkName="home" />
  <NavLink linkName="shop" />
  <NavLink linkName="about" />
  <NavLink linkName="contact" />
</ul>

<script type="module">
  const menu = document.getElementById("menu");
  const iconBurger = document.getElementById("icon-burger");
  const iconClose = document.getElementById("icon-close");
  const logoEl = document.getElementById("logo");
  const overlay = document.getElementById("overlay");

  function closeMenu() {
    iconBurger?.classList.remove("hidden");
    iconClose?.classList.add("hidden");
    menu?.classList.add("hidden");
    logoEl?.classList.remove("hidden");
    menu?.classList.remove("open");
    overlay?.classList.add("hidden");
  }

  if (menu) {
    menu.addEventListener("click", (e) => {
      const target = e.target;
      if (target.tagName === "LI" || target.closest("li")) {
        closeMenu();
      }
    });
  }
</script>
