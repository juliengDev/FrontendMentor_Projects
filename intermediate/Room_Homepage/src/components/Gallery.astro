---
import { Image } from "astro:assets";

import img1 from "../assets/desktop-image-hero-1.jpg";
import img2 from "../assets/desktop-image-hero-2.jpg";
import img3 from "../assets/desktop-image-hero-3.jpg";
import img1Mobile from "../assets/mobile-image-hero-1.jpg";
import img2Mobile from "../assets/mobile-image-hero-2.jpg";
import img3Mobile from "../assets/mobile-image-hero-3.jpg";
import ArrowLeft from "../assets/icon-angle-left.svg";
import ArrowRight from "../assets/icon-angle-right.svg";
import Arrow from "../assets/icon-arrow.svg";
const slidesData = [
  {
    heading: "Discover innovative ways to decorate",
    text: "We provide unmatched quality, comfort, and style for property owners across the country. Our experts combine form and function in bringing your vision to life. Create a room in your own style with our collection and make your property a reflection of you and what you love.",
  },
  {
    heading: "We are available all across the globe",
    text: "With stores all over the world, it's easy for you to find furniture for your home or place of business. Locally, we're in most major cities throughout the country. Find the branch nearest you using our store locator. Any questions? Don't hesitate to contact us today.",
  },
  {
    heading: "Manufactured with the best materials",
    text: "Our multifunctional collection blends design and function to suit your individual taste. Make each room unique, or pick a cohesive theme that best express your interests and what inspires you. Find the furniture pieces you need, from traditional to contemporary styles or anything in between. Product specialists are available to help you create your dream space.",
  },
];
---

<section class="md:col-span-2">
  <div class="carousel">
    <ul id="carousel-track" class="carousel-track">
      <li class="slide">
        <Image
          src={img1}
          alt="slide 1"
          class="hidden h-full w-full object-cover object-[50%_30%] sm:block"
          decoding="async"
          loading="eager"
        />
        <Image
          src={img1Mobile}
          alt="slide 1"
          class="h-full w-full object-cover object-bottom sm:hidden"
          decoding="async"
          loading="eager"
        />
      </li>
      <li class="slide">
        <Image
          src={img2}
          alt="slide 2"
          class="hidden h-full w-full object-cover object-[50%_30%] sm:block"
          decoding="async"
          loading="eager"
        />
        <Image
          src={img2Mobile}
          alt="slide 2"
          class="h-full w-full object-cover object-bottom sm:hidden"
          decoding="async"
          loading="eager"
        />
      </li>
      <li class="slide">
        <Image
          src={img3}
          alt="slide 3"
          class="hidden h-full w-full object-cover object-[50%_30%] sm:block"
          decoding="async"
          loading="eager"
        />
        <Image
          src={img3Mobile}
          alt="slide 3"
          class="h-full w-full object-cover object-bottom sm:hidden"
          decoding="async"
          loading="eager"
        />
      </li>
    </ul>

    <div class="carousel-controls">
      <button id="prev" aria-label="Previous Slide">
        <ArrowLeft />
      </button>
      <button id="next" aria-label="Next Slide">
        <ArrowRight />
      </button>
    </div>
  </div>
</section>
<section id="about" class="relative">
  <div class="px-8 py-[3.9375rem] lg:px-[3.9375rem]">
    <div id="text-content" class="text-content">
      <h1 id="dynamic-heading" class="heading-text">{slidesData[0].heading}</h1>
      <p id="dynamic-text" class="paragraph-text mb-8">{slidesData[0].text}</p>
      <div class="flex items-center justify-between">
        <p
          class="text-[0.9375rem] leading-[100%] font-medium tracking-[12.5px] uppercase"
        >
          shop now
        </p>
        <a
          href="#"
          class="text-[0.9375rem] leading-[100%] font-medium tracking-[12.5px] uppercase"
          ><Arrow class="arrow" /></a
        >
      </div>
    </div>
  </div>
  <div class="carousel-controls-xl w-fit">
    <button id="prev-xl" aria-label="Previous Slide">
      <ArrowLeft />
    </button>
    <button id="next-xl" aria-label="Next Slide">
      <ArrowRight />
    </button>
  </div>
</section>

<style>
  .carousel {
    position: relative;
    overflow: hidden;
    height: 100%;
  }

  .carousel-track {
    display: flex;
    transition: transform 0.5s ease-out;
    height: 100%;
  }

  .slide {
    flex: 0 0 100%;
    height: 400px;
    background: #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    height: 100%;
  }

  .carousel-controls {
    position: absolute;
    bottom: 0;
    right: 0;
    display: flex;
    z-index: 10;
  }
  .carousel-controls-xl {
    position: absolute;
    display: none;
    bottom: 0;
    left: 0;
    z-index: 10;
  }

  .carousel-controls button,
  .carousel-controls-xl button {
    background-color: #000000;
    border: none;
    color: white;
    font-size: 2rem;
    padding: 1.75rem 2.125rem;
    cursor: pointer;
    transition:
      background-color 0.3s ease,
      color 0.3s ease;
    z-index: 30;
  }

  .carousel-controls button:hover,
  .carousel-controls-xl button:hover {
    background-color: #444444;
    color: #fff;
  }

  /* Styles pour les transitions du contenu textuel */
  .text-content {
    transition: opacity 0.4s ease-in-out;
    opacity: 1;
  }

  .text-content.fade-out {
    opacity: 0;
  }

  .heading-text {
    margin-bottom: 1rem;
    font-size: clamp(2.5rem, 4vw, 3rem);
    font-weight: 600;
    letter-spacing: -2px;
    line-height: 100%;
  }

  .paragraph-text {
    font-size: 1rem;
    font-weight: 500;
    color: #a0a0a0;
    line-height: 140%;
    letter-spacing: -0.5px;
  }

  @media (width < 376px) {
    .slide {
      height: 360px;
    }
  }
  @media (width > 1300px) {
    .carousel-controls {
      display: none;
    }
    .carousel-controls-xl {
      display: flex;
    }
  }
</style>
<script>
  // Sélectionner les boutons par leurs IDs plutôt que par classe
  const prevButton = document.getElementById("prev");
  const nextButton = document.getElementById("next");
  const prevButtonXl = document.getElementById("prev-xl");
  const nextButtonXl = document.getElementById("next-xl");

  const track = document.getElementById("carousel-track") as HTMLUListElement;
  const textContent = document.getElementById("text-content") as HTMLDivElement;
  const dynamicHeading = document.getElementById(
    "dynamic-heading",
  ) as HTMLHeadingElement;
  const dynamicText = document.getElementById(
    "dynamic-text",
  ) as HTMLParagraphElement;

  const slidesData = [
    {
      heading: "Discover innovative ways to decorate",
      text: "We provide unmatched quality, comfort, and style for property owners across the country. Our experts combine form and function in bringing your vision to life. Create a room in your own style with our collection and make your property a reflection of you and what you love.",
    },
    {
      heading: "We are available all across the globe",
      text: "With stores all over the world, it's easy for you to find furniture for your home or place of business. Locally, we're in most major cities throughout the country. Find the branch nearest you using our store locator. Any questions? Don't hesitate to contact us today.",
    },
    {
      heading: "Manufactured with the best materials",
      text: "Our multifunctional collection blends design and function to suit your individual taste. Make each room unique, or pick a cohesive theme that best express your interests and what inspires you. Find the furniture pieces you need, from traditional to contemporary styles or anything in between. Product specialists are available to help you create your dream space.",
    },
  ];

  let currentIndex = 0;
  const slides = track.querySelectorAll("li");
  const totalSlides = slides.length;
  let isTransitioning = false;

  function updateCarouselPosition() {
    const slideWidth = slides[0].clientWidth;
    track.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
  }

  function updateTextContent() {
    if (isTransitioning) return;

    isTransitioning = true;

    // Fade out
    textContent.classList.add("fade-out");

    setTimeout(() => {
      dynamicHeading.textContent = slidesData[currentIndex].heading;
      dynamicText.textContent = slidesData[currentIndex].text;

      // Fade in
      textContent.classList.remove("fade-out");

      // Réinitialiser le flag de transition
      setTimeout(() => {
        isTransitioning = false;
      }, 400);
    }, 200);
  }

  function goToPreviousSlide() {
    if (isTransitioning) return;

    if (currentIndex > 0) {
      currentIndex--;
      updateCarouselPosition();
      updateTextContent();
    }
  }

  function goToNextSlide() {
    if (isTransitioning) return;

    if (currentIndex < totalSlides - 1) {
      currentIndex++;
      updateCarouselPosition();
      updateTextContent();
    }
  }

  // Ajouter les event listeners pour tous les boutons
  if (prevButton) {
    prevButton.addEventListener("click", goToPreviousSlide);
  }
  if (nextButton) {
    nextButton.addEventListener("click", goToNextSlide);
  }
  if (prevButtonXl) {
    prevButtonXl.addEventListener("click", goToPreviousSlide);
  }
  if (nextButtonXl) {
    nextButtonXl.addEventListener("click", goToNextSlide);
  }

  document.addEventListener("keydown", (e) => {
    if (e.key === "ArrowLeft") {
      goToPreviousSlide();
    } else if (e.key === "ArrowRight") {
      goToNextSlide();
    }
  });
</script>
