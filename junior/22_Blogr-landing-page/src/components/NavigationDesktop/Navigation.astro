---
import NavigationItemConnect from "./NavigationItemConnect.astro";
import NavigationItemCompany from "./NavigationItemCompany.astro";
import NavigationItemProduct from "./NavigationItemProduct.astro";
---

<ul class="desktop-nav txt-preset-6-bold">
  <NavigationItemProduct />
  <NavigationItemCompany />
  <NavigationItemConnect />
</ul>

<style>
  .desktop-nav {
    display: none;
    list-style-type: none;
    gap: 2rem;
    color: var(--white);
  }

  @media (min-width: 768px) {
    .desktop-nav {
      display: flex;
    }
  }
</style>
