---
import ToggleTheme from "./ui/ToggleTheme.astro";
import Logo from "./ui/Logo.astro";
---

<header class="header">
  <Logo />
  <ToggleTheme />
</header>

<style is:global>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    border-radius: 20px;
    background-color: var(--neutral-0);
  }

  .dark .header {
    background-color: var(--neutral-800);
  }
</style>
