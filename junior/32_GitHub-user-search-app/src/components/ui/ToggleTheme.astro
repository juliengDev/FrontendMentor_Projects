<div class="flex items-center gap-2">
  <button
    id="theme-toggle" class="cursor-pointer">
  </button>
</div>

<script>
  // Sélecteur du bouton
  const button = document.getElementById('theme-toggle') as HTMLButtonElement
  button.classList.add("flex","gap-4","items-center")

  // Création initiale
  const textEl = document.createElement('p');
  textEl.classList.add('uppercase');

  const iconEl = document.createElementNS("http://www.w3.org/2000/svg", "svg");
  iconEl.setAttribute("width", "24");
  iconEl.setAttribute("height", "24");
  iconEl.setAttribute("viewBox", "0 0 24 24");
  iconEl.setAttribute("fill", "none");
  iconEl.setAttribute("stroke", "currentColor");
  iconEl.setAttribute("stroke-width", "2");
  iconEl.setAttribute("stroke-linecap", "round");
  iconEl.setAttribute("stroke-linejoin", "round");

button.append(textEl, iconEl);

  // Fonction pour appliquer le thème en fonction de la préférence
  const applyTheme = (): void => {
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    if (
      localStorage.theme === 'dark' ||
      (!('theme' in localStorage) && prefersDark)
    ) {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
  };
  // Fonction pour mettre à jour le toggle
  const updateToggle = () => {
    if (document.documentElement.classList.contains('dark')) {
      textEl.textContent = "Light";
      iconEl.innerHTML = `<circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/>`;
    } else {
      textEl.textContent = "Dark";
      iconEl.innerHTML = `<path d="M20.985 12.486a9 9 0 1 1-9.473-9.472c.405-.022.617.46.402.803a6 6 0 0 0 8.268 8.268c.344-.215.825-.004.803.401"/>`;      
    }
  };
  // Initialisation
  applyTheme();
  updateToggle();

  // Toggle au clic
  button.addEventListener('click', () => {
    document.documentElement.classList.toggle('dark');
    localStorage.theme = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
    updateToggle();
  });
  
</script>