---
const { title } = Astro.props;
import "../styles/global.css";
import Header from "../components/Header.astro"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="../src/assets/favicon-32x32.png" />
    <meta
      name="description"
      content="Dev Finder: the platform to find and connect with skilled web developers for all your digital projects"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="py-8 px-4 min-h-screen bg-background text-foreground md:px-4 md:py-[8.125rem]">
      <Header />
      <main class="max-w-[704px] mx-auto">
        <slot />
      </main>
  </body>
</html>
